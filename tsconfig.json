{
    "include": [
        "src/**/*",
        "config"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "mock"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react", //tsx转换为js，不是不是jsx
        "target": "esnext",
        // 这可以对 `this` 上的数据属性进行更严格的推断
        "strict": true,
        // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "paths": {
            "components/*": [
                "./src/components/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "api/*": [
                "./src/api/*"
            ],
            "views/*": [
                "./src/views/*"
            ],
            "styles/*": [
                "./src/styles/*"
            ],
            "lib/*": [
                "./src/lib/*"
            ],
            "server/*": [
                "./src/lib/server/*"
            ],
            "svg/*": [
                "./src/src/images/svg/*"
            ],
            "images/*": [
                "./src/images/*"
            ],
            "router/*": [
                "./src/src/router/*"
            ],
            "@redux/*": [
                "./src/redux/*"
            ],
            "reducers/*": [
                "./src/redux/reducers/*"
            ],
            "actions/*": [
                "./src/redux/actions/*"
            ],
            "config/*": [
                "./config/*"
            ],
            "theme/*": [
                "./src/theme/*"
            ],
        }
    }
}